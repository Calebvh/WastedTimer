{
  "manifest_version": 2,
  "name": "Wasted Timer",
  "version": "1.0.0",
  "browser_specific_settings": {
    "gecko": {
      "id": "wasted-timer@example.com"
    }
  },
  "description": "Track time spent on configurable websites with an overlay display",
  "permissions": [
    "storage",
    "tabs",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["dist/background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "48": "icons/icon.svg",
    "96": "icons/icon.svg"
  }
}
